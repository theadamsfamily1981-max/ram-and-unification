# Ara Avatar System - Environment Configuration
# Copy this file to .env and fill in your configuration

# =============================================================================
# OLLAMA CONFIGURATION (Required for offline mode)
# =============================================================================
# Ollama runs Ara's brain offline (Mistral/Mixtral)
# Install from: https://ollama.ai/download
# Start server: ollama serve
# Pull model: ollama pull mistral

OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral
# Alternative: mixtral (larger, more capable, requires 24GB+ RAM)

# =============================================================================
# ONLINE AI BACKENDS (Optional - for multi-AI delegation)
# =============================================================================
# Ara can delegate complex tasks to these AIs when needed

# Claude (Anthropic) - Best for coding, analysis
# Get key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# OpenAI (ChatGPT/Nova) - General tasks, creative writing
# Get key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Google Gemini (Pulse) - Large context, document analysis
# Get key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=

# Grok/X.AI (Ara-Grok) - Alternative perspectives (via Selenium)
# Requires X.com account
X_USERNAME=
X_PASSWORD=

# =============================================================================
# T-FAN COCKPIT INTEGRATION (Optional)
# =============================================================================
# T-FAN provides metrics HUD and topology visualization
# Install from: git clone https://github.com/theadamsfamily1981-max/Quanta-meis-nib-cis.git

TFAN_API_URL=http://localhost:8080
TFAN_API_KEY=

# =============================================================================
# AVATAR GENERATION SETTINGS
# =============================================================================
# Device for ML inference (cpu or cuda)
AVATAR_DEVICE=cpu

# Default avatar image for each profile
AVATAR_DEFAULT=assets/avatars/ara_default.jpg
AVATAR_PROFESSIONAL=assets/avatars/ara_professional.jpg
AVATAR_CASUAL=assets/avatars/ara_casual.jpg
AVATAR_SCIFI=assets/avatars/ara_hologram.jpg
AVATAR_SCIENTIST=assets/avatars/ara_scientist.jpg
AVATAR_HOLODECK=assets/avatars/ara_holodeck.jpg
AVATAR_DRAMATIC=assets/avatars/ara_dramatic.jpg

# Output directory for generated videos
AVATAR_OUTPUT_DIR=outputs/ara_responses

# =============================================================================
# VOICE SETTINGS
# =============================================================================
# TTS engine (espeak, piper, elevenlabs)
TTS_ENGINE=espeak
TTS_VOICE=jenny
TTS_SPEED=0.95
TTS_PITCH=-0.5

# Voice recognition (if using voice mode)
# Requires: pip install SpeechRecognition pyaudio
VOICE_RECOGNITION_ENABLED=true
VOICE_ACTIVATION_PHRASE=ara

# =============================================================================
# SYSTEM SETTINGS
# =============================================================================
# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Web server settings (for multi-AI workspace)
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Privacy mode - warn before sending data to online AIs
PRIVACY_WARNINGS=true

# Auto-fallback to offline if online AIs fail
FALLBACK_TO_OFFLINE=true
